<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="mybatis.mapper.jmuser">
	<!-- 1. 아이디 중복 확인 -->
	<select id="validate_id" parameterType="String" resultType="int">
		SELECT count(*) FROM jmuser WHERE jmuser_id=#{jmuser_id}
	</select>
	<!-- 2. 회원 가입 -->
	<insert id="signup" parameterType="vo.JmuserVO">
		INSERT INTO jmuser VALUES
			(jmuser_seq.nextval,
			#{jmuser_id},
			#{jmuser_pw},
			#{jmuser_name},
			#{jmuser_nickname},
			#{jmuser_birth},
			#{jmuser_gender},
			#{jmuser_tel},
			#{jmuser_email},
			#{jmuser_addr},
			NULL)
	</insert>
</mapper>